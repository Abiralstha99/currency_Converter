<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Currency Converter</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div class="container">
      <h1>Currency Converter</h1>
      <form action="/convert" method="post">
        <div class="form-group">
          <input
            type="number"
            name="amount"
            placeholder="Amount"
            required
            step="0.01"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="from"
            placeholder="From (e.g. USD)"
            required
          />
        </div>
        <div class="form-group">
          <input type="text" name="to" placeholder="To (e.g. EUR)" required />
        </div>
        <button type="submit">Convert Currency</button>
      </form>

      <% if (typeof result !== "undefined") { %>
        <h2>Result: <%= result %></h2>
      <% } %>
    </div>
  </body>
</html>
